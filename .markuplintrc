{
  "extends": ["markuplint:recommended"],
  "parser": {
    ".[jt]sx?$": "@markuplint/jsx-parser"
  },
  "rules": {
    "required-attr": true
  },
  "nodeRules": [
    {
      "tagName": "img",
      "rules": {
        "required-attr": [
          "alt",
          "src"
        ]
      }
    },
    {
      "tagName": "a",
      "rules": {
        "required-attr": [
          {
            "name": "rel",
            "value": "/noopener/i"
          }
        ]
      }
    }
  ]
}
